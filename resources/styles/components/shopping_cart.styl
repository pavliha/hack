$main-color = #6394F8;
$light-text = #ABB0BE;

.shopping-cart {
  background: white;
  border-radius: 3px;
  padding: 20px;
  .shopping-cart-header {
    border-bottom: 1px solid #E8E8E8;
    padding-bottom: 15px;
    .shopping-cart-total {
      float: right;
    }
  }

}

.shopping-cart--absolute {
  position: absolute;
  right 15px
  top 60px
  z-index 10
  width: 320px;
}

.shopping-cart-items {

  padding-top: 20px;

  li {
    margin-bottom: 18px;
  }

}

.shopping-cart_lighter-text {
  color: #ABB0BE;
}

.shopping-cart_main-color-text {
  color: $main-color;
}

.shopping-cart_item-name {
  display: block;
  padding-top: 10px;
  font-size: 16px;
}

.shopping-cart_item-price {
  color: #6394F8;
  margin-right: 8px;
}

.shopping-cart_item-quantity {
  color: #e5e5e5;
}

.shopping-cart:after {
  bottom: 100%;
  left: 89%;
  border: solid transparent;
  content: " ";
  height: 0;
  width: 0;
  position: absolute;
  pointer-events: none;
  border-bottom-color: white;
  border-width: 8px;
  margin-left: -8px;
}

.shopping-cart_cart-icon {
  color: #515783;
  font-size: 24px;
  margin-right: 7px;
  float: left;
}

.shopping-cart_lighter-text {
  color: #ABB0BE;
}

.shopping-cart_main-color-text {
  color: $main-color;
}
